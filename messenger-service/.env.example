# Server Configuration
PORT=3002
NODE_ENV=development

# DIAR Backend Connection (REQUIRED)
DIAR_BACKEND_URL=http://localhost:3001
DIAR_API_KEY=your-diar-api-key

# Redis (REQUIRED for caching)
REDIS_URL=redis://localhost:6379

# Evolution API - WhatsApp Multi-Session (recommended)
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your-evolution-api-key

# Legacy: WAHA - WhatsApp HTTP API (deprecated, use Evolution API)
# WAHA_URL=http://localhost:3001
# WAHA_API_KEY=your-waha-api-key

# Messenger Service URL (for Evolution API webhook)
MESSENGER_SERVICE_URL=http://localhost:3002

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Instagram (optional)
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_APP_SECRET=your-instagram-app-secret
INSTAGRAM_VERIFY_TOKEN=your-webhook-verify-token

# OpenAI for AI auto-responder (optional)
OPENAI_API_KEY=sk-your-openai-api-key

# Logging
LOG_LEVEL=info
